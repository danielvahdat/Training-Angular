div(ng-controller='registerController')
.heading
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        a.navbar-brand(href='#') GeekHouse
      ul.nav.navbar-nav
        li
          a(ui-sref='register') register
      ul.nav.navbar-nav.navbar-right
        li
          a(ui-sref='login') Login
  .row
    .col-sm-4
    .col-sm-4
      .register
        .inform
          label Email:
          input.form-control(type='text', ng-model='emailModel', placeholder='Id', aria-describedby='email')
          br
          label Password:
          input.form-control(type='password', ng-model='passModel', placeholder='Password')
          br
          label Confirm Password:
          input.form-control(type='password', ng-model='passModel', placeholder='Repeat Password')
          br
          .row.paddingLeftDiv
            button.btn.regbtn() register 
    .col-sm-4
